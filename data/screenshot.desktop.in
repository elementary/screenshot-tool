[Desktop Entry]
Type=Application
Name=Screenshot
Comment=Save images of the screen
Exec=io.elementary.screenshot
Icon=io.elementary.screenshot
Terminal=false
Categories=GTK;GNOME;Utility;
Keywords=Snapshot;Screenshot;
Actions=ScreenShot;WindowShot;AreaShot;

[Desktop Action ScreenShot]
Name=Capture the Whole Screen
Exec=io.elementary.screenshot --screen

[Desktop Action WindowShot]
Name=Capture the Current Window
Exec=io.elementary.screenshot --window

[Desktop Action AreaShot]
Name=Capture a Selected Area
Exec=io.elementary.screenshot --area
